<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    tools:context=".GameActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:paddingLeft="30dp"
        android:paddingEnd="30dp">

        <TextView
            android:id="@+id/gamemode_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/select_gamemode"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/score"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/score"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:textAlignment="textEnd"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="29dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="23dp"
        android:paddingRight="67dp">

        <TextView
            android:id="@+id/show128"
            android:layout_width="16dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="7dp"
            android:layout_weight="1"
            android:background="@drawable/number_tooltip"
            android:gravity="center"
            android:text="128"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/show64"
            android:layout_width="16dp"
            android:layout_height="match_parent"
            android:layout_marginRight="7dp"
            android:layout_weight="1"
            android:background="@drawable/number_tooltip"
            android:gravity="center"
            android:text="64"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/show32"
            android:layout_width="16dp"
            android:layout_height="match_parent"
            android:layout_marginRight="7dp"
            android:layout_weight="1"
            android:background="@drawable/number_tooltip"
            android:gravity="center"
            android:text="32"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/show16"
            android:layout_width="16dp"
            android:layout_height="match_parent"
            android:layout_marginRight="7dp"
            android:layout_weight="1"
            android:background="@drawable/number_tooltip"
            android:gravity="center"
            android:text="16"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/show8"
            android:layout_width="16dp"
            android:layout_height="match_parent"
            android:layout_marginRight="7dp"
            android:layout_weight="1"
            android:background="@drawable/number_tooltip"
            android:gravity="center"
            android:text="8"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/show4"
            android:layout_width="16dp"
            android:layout_height="match_parent"
            android:layout_marginRight="7dp"
            android:layout_weight="1"
            android:background="@drawable/number_tooltip"
            android:gravity="center"
            android:text="4"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/show2"
            android:layout_width="16dp"
            android:layout_height="match_parent"
            android:layout_marginRight="7dp"
            android:layout_weight="1"
            android:background="@drawable/number_tooltip"
            android:gravity="center"
            android:text="2"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/show1"
            android:layout_width="16dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/number_tooltip"
            android:gravity="center"
            android:text="1"
            android:textAlignment="center" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="397dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/playzone" />

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="238dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/rounded_submit" />

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="328dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/button_start" />

        <LinearLayout
            android:id="@+id/ques_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="24dp"
            android:orientation="vertical">

        </LinearLayout>

    </FrameLayout>

    <ImageView
        android:id="@+id/timer"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        app:srcCompat="@drawable/rounded_edittext" />

</LinearLayout>